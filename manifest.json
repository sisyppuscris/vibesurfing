{
  "manifest_version": 3,
  "name": "vibesurfing",
  "version": "0.1.0",
  "description": "Lightweight Chrome AI extension for faster reading and writing",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "assets/icon.png"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "open-vibesurfing": {
      "suggested_key": {
        "default": "Ctrl+M"
      },
      "description": "Open VibeSurfing panel"
    }
  }
}
